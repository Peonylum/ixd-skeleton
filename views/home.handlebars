    <title>Tasks</title>

    <style>
        * {
            font-family: 'Trebuchet MS'
        }
        
        body {
            height: 100vh;
            display: flex;
            flex-direction: column;
        }

        nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
            color: #4A169F;
            font-size: larger;
        }

        details article {
            background-color: white;
            border: 1px solid rgb(190, 189, 189);
            border-radius: 5px;
            margin: 5px;
            box-shadow: -5px 3px 6px -1px rgba(0, 0, 0, 0.25);
        }

        details article * {
            margin-left: 10px;
        }

        details svg {
            margin-bottom: 5px;
            transform: translate(275px, 0px)
        }

        details summary {
            background-color: white;
            padding: 10px;
            color: #4A169F;
            font-size: large;
            border: solid #C4C4C4 1px;
            box-shadow: -5px 3px 6px -1px rgba(0, 0, 0, 0.25);
        }

        details {
            margin-bottom: 5px;
        }

        .taskDescription:link,
        .taskDescription:visited,
        .add-button:link,
        .add-button:visited {
            color: black;
            text-decoration: none;
        }

        #add-button {
            height: fit-content;
            border: solid #4A169F 1px;
            border-radius: 8px;
            padding: 9px;
            display: flex;
            align-items: center;
            font-size: larger;
            width: 360px;
            margin-bottom: 10px;
            background-color: #4A169F;
            color: white;
            box-shadow: -5px 3px 6px -1px rgba(0, 0, 0, 0.65);
        }

        #add-icon {
            margin-left: 35%;
            margin-right: 10px;
        }
    </style>
</head>

